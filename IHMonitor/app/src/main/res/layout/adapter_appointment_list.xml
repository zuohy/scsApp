<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adapter_appointment_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/bg_appointment_list_item"
    android:orientation="vertical"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/adapter_appointment_list_room_id_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/font_size_18"
            android:textStyle="bold"
            tools:text="房间ID:10658" />

        <TextView
            android:id="@+id/adapter_appointment_list_type_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_version_grey"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:textSize="@dimen/font_size_12"
            android:visibility="gone"
            tools:text="皮肤科查房" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_dddddd" />

    <TextView
        android:id="@+id/adapter_appointment_list_disease_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_size_16"
        tools:text="疾病名称：腰椎间盘突出" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adapter_appointment_list_superior_doctor_hospital_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_14"
            tools:text="D：广元第一人民医院" />

        <TextView
            android:id="@+id/adapter_appointment_list_superior_doctor_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_14"
            tools:text="王大锤" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adapter_appointment_list_first_doctor_hospital_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_14"
            tools:text="d：淮北矿工总医院" />

        <TextView
            android:id="@+id/adapter_appointment_list_first_doctor_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_14"
            tools:text="王二麻" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/adapter_appointment_list_patient_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_size_14"
            tools:text="患者姓名：张小花" />

        <TextView
            android:id="@+id/adapter_appointment_list_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_size_12"
            tools:text="2017.06.12 17:05" />
    </RelativeLayout>
</LinearLayout>