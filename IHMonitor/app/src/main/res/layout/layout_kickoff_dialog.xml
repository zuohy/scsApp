<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_cc000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="200dp"
        android:background="@drawable/bg_dialog_common_2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/layout_kickoff_dialog_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="13.33dp"
            android:layout_marginRight="13.33dp"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:singleLine="false"
            android:text="@string/title_dialog_tip"
            android:textColor="@color/color_app_main_color"
            android:textSize="@dimen/font_size_18" />

        <View
            style="@style/horizontal_line_light_1"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />

        <TextView
            android:id="@+id/layout_kickoff_dialog_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.33dp"
            android:layout_marginRight="13.33dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_16" />

        <Button
            android:id="@+id/layout_kickoff_dialog_positive_btn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="1.5dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_dialog_btn_bottom_45aef8_corners"
            android:text="@string/sure"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>
</RelativeLayout>