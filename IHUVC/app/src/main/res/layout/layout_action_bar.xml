<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_272727"
    android:orientation="vertical">

    <cn.longmaster.ihuvc.view.MyStatusBar
        android:id="@+id/action_bar_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action_bar_left_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingEnd="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingStart="15dp"
            android:textColor="@color/c_white"
            android:textSize="@dimen/f_16sp" />

        <ImageView
            android:id="@+id/action_bar_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription=""
            android:paddingEnd="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingStart="15dp"
            android:scaleType="center"
            android:src="@drawable/ic_actionbar_back_white" />

        <TextView
            android:id="@+id/action_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:gravity="center"
            android:textColor="@color/c_white"
            android:textSize="@dimen/f_18sp" />

        <TextView
            android:id="@+id/action_bar_right_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="15dp"
            android:textColor="@color/c_white"
            android:textSize="@dimen/f_16sp" />

        <TextView
            android:id="@+id/action_bar_right_second_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/action_bar_right_text"
            android:layout_toStartOf="@id/action_bar_right_text"
            android:gravity="center"
            android:paddingRight="10dp"
            android:textColor="@color/c_white"
            android:textSize="@dimen/f_16sp" />

        <ImageView
            android:id="@+id/action_bar_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/app_name"
            android:paddingEnd="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingStart="10dp"
            android:scaleType="center"
            android:src="@drawable/ic_actionbar_more_white" />

        <ProgressBar
            android:id="@+id/action_bar_progress_bar"
            android:layout_centerVertical="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:indeterminate="true"
            android:layout_toLeftOf="@id/action_bar_title"
            android:layout_toStartOf="@id/action_bar_title" />
    </RelativeLayout>
</LinearLayout>

