<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/bg_dialog_white_corners"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="90dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/layout_common_dialog_title_tv"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/f_16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_cccccc" />

            <TextView
                android:id="@+id/layout_common_dialog_message_tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="4dp"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/f_14sp" />

            <TextView
                android:id="@+id/layout_common_dialog_message_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:lineSpacingExtra="7dp"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/f_14sp" />
        </LinearLayout>

        <View style="@style/horizontal_line_light_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/layout_common_dialog_positive_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/text_color_808080_white"
                android:textSize="@dimen/f_16sp" />

            <View
                android:id="@+id/layout_common_dialog_line_view"
                style="@style/vertical_line_light_1"
                android:visibility="visible" />

            <TextView
                android:id="@+id/layout_common_dialog_negative_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/determine"
                android:textColor="@color/text_color_808080_white"
                android:textSize="@dimen/f_16sp"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
